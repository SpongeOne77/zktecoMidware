<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zkteco.attpush.mapper.BizAccessInfoMapper">

    <resultMap id="BizAccessInfoList" type="TblBizAccessInfo">
        <result property="id" column="id"/>
        <result property="employeeId" column="employee_id"/>
        <result property="employeeNumber" column="employee_number"/>
        <result property="employeeName" column="employee_name"/>
        <result property="area" column="area"/>
        <result property="time" column="time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectBizAccess">
        SELECT id,employee_id,employee_number,employee_name,area,time,create_time FROM tbl_biz_access_info
    </sql>

    <select id="getByArea" parameterType="java.lang.String" resultMap="BizAccessInfoList">
        <include refid="selectBizAccess" />
        WHERE area = #{area};
    </select>

    <select id="getByAreaAndPin" parameterType="EmployeeSignInOffEntity" resultMap="BizAccessInfoList">
        <include refid="selectBizAccess" />
        WHERE employee_number = #{employeeNumber} AND area = #{area};
    </select>

    <select id="getAllPersonnel" resultMap="BizAccessInfoList">
        <include refid="selectBizAccess" />
    </select>

</mapper>